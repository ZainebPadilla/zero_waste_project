<h1 class="custom-title">Contactez-nous !</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div>
        <label for="exampleInputEmail1" class="form-label mt-4">Votre adresse email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Votre email">
      </div>

      <div>
        <label for="exampleTextarea" class="form-label mt-4">Racontez-nous</label>
        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
      </div>
      <br>

      <button type="submit" class="btn btn-primary">Envoyer</button>
    </div>

    <div class="col-md-6">
      <%= image_tag("contact.png", alt: "Background image", class: "img-fluid") %>
    </div>
  </div>
</div>