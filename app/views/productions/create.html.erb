<%= form_with(model: @production, local: true) do |form| %>
  <div>
    <%= form.label :process_name, "Nom du Processus" %>
    <%= form.text_field :process_name %>
  </div>

  <div>
    <%= form.label :raw_material_id, "Matière Première" %>
    <%= form.collection_select :raw_material_id, RawMaterial.all, :id, :name, prompt: "Sélectionnez une matière première" %>
  </div>

  <div>
    <%= form.label :quantity_used, "Quantité Utilisée (kg)" %>
    <%= form.number_field :quantity_used, step: 0.01 %> <! -- step: 0.01 permet décimale niveau 2 --> 
  </div>

  <div>
    <%= form.submit "Enregistrer" %>
  </div>
<% end %>