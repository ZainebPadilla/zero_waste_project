<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h2>Modifier mon profil</h2>
         </div>

          <div class="card-body">
             <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "form") do |f| %>

            
              <div class="mb-4">
                <%= f.label :email , "Adresse e-mail", class: "form-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="mb-4">
                <%= f.label :password, "Nouveau mot de passe (facultatif)", class: "form-label" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-50" %>
                <% if @minimum_password_length %>
            
                  <em><%= @minimum_password_length %> caracteres minimum</em>
                <% end %>
              </div>

              <div class="mb-4">
                <%= f.label :password_confirmation, "Confirmez le mot de passe", class: "form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-50" %>
              </div>

              <div class="mb-4">
                <%= f.label :Mot_de_passe_actuel %>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-50" %>
              </div>

              <div class="mb-4">
                <%= f.submit "Mettre à jour", class: "btn btn-primary btn-sm" %>
              </div>
            <% end %>

            <hr class="my-4">

            <div>
            <%= link_to "Supprimer mon compte", registration_path(resource_name), 
                        method: :delete, 
                        data: { confirm: "Êtes-vous sûr ? Cette action est irréversible." }, 
                        class: "btn btn-danger btn-sm" %>

            </div>
            <%= link_to "Retour", :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>