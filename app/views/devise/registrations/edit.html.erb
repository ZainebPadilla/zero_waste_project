<div class="text-center my-5">
  <h2>Modifier le compte</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Mot de passe" %> <i>(ne pas remplir si vous ne désirez pas le modifier)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> caractères minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmer le mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Mot de passe actuel" %> <i>(nous avons besoin de votre mot de passe pour confirmer)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Mettre à jour", class: "btn btn-success" %>
  </div>
  <% end %>

  <div class="space_around mt-5">
    <h3>Supprimer mon compte</h3>
    <div>
      Pas satisfait?
      <%= button_to "Supprimer mon compte", registration_path(resource_name), 
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
          method: :delete, 
          class: "btn btn-danger" %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Retour", :back, class: "btn btn-secondary" %>
  </div>
</div>